<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayish_white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.NoteContentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText
        android:id="@+id/child_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:background="@color/grayish_white" />

    <EditText
        android:id="@+id/child_content_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="start|top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/child_save_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_btw_buttons"
        android:textSize="@dimen/buttons_text_size"
        android:text="@string/save_button_text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/child_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_btw_buttons"
        android:textSize="@dimen/buttons_text_size"
        android:text="@string/cancel_button_text"/>

    </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>